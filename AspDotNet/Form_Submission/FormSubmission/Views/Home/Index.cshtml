    @model User
<div class="row m-4">
<h1>Enter your Information</h1>

</div>
<form asp-action="Create" asp-controller="Home" method="post">
    <div class="container">
        <div class="row">
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="row m-2">
            <div class="col-2"><label asp-for="FirstName"></label></div>
            <div class="col-3"><input asp-for="FirstName"></div>
        </div>
        <div class="row">
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="row m-2">
            <div class="col-2"><label asp-for="LastName"></label></div>
            <div class="col-3"><input asp-for="LastName"></div>
        </div>
        <div class="row">
            <span asp-validation-for="Age"></span>
        </div>
        <div class="row m-2">
            <div class="col-2"><label asp-for="Age"></label></div>
            <div class="col-3"><input asp-for="Age"></div>
        </div>
        <div class="row">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="row m-2">
            <div class="col-2"><label asp-for="Email"></label></div>
            <div class="col-3"><input asp-for="Email"></div>
        </div>
        <div class="row">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="row m-2">
            <div class="col-2"><label asp-for="Password"></label></div>
            <div class="col-3"><input asp-for="Password"></div>
        </div>
        <div class="row m-2">
            <input value="Add User" type="submit"> 
        </div>
    </div>
</form>