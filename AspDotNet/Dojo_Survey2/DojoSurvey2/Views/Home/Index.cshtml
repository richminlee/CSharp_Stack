@model Survey
<div class="container">
    <form asp-action="Success" asp-controller="Home" method="post">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-5 border border-dark mt-4">
                <div class="row m-4">
                    <br><span class="row" asp-validation-for="Name"></span><br>
                    <div class="col-6"><label asp-for="Name"></label></div> 
                    <div style="float: right;" class="col-6"><input style="width: 200px;" asp-for="Name"></div>
                </div>
                
                <div class="row m-4">
                    <br><span class="row" asp-validation-for="Location"></span><br>
                    <div class="col-6"><label asp-for="Location"></label></div>
                    <div style="float: right;" class="col-6">
                        <select style="width: 200px;" asp-for="Location">
                            <option value="">Choose an Option</option>
                            <option value="Seattle">Seattle, WA</option>
                            <option value="San Francisco">San Francisco, CA</option>
                            <option value="Austin">Austin, TX</option>
                            <option value="NYC">NYC, NY</option>
                        </select>
                    </div>
                </div>
                <div class="row m-4">
                    <br><span class="row" asp-validation-for="Language"></span><br>
                    <div class="col-6"><label asp-for="Language"></label></div>
                    <div style="float: right;" class="col-6">
                        <select style="width: 200px;" asp-for="Language">
                            <option value="">Choose an Option</option>
                            <option value="Javascript">Javascript</option>
                            <option value="Python">Python</option>
                            <option value="C#">C#</option>
                            <option value="MERN">MERN</option>
                        </select>
                    </div>
                </div>
                <div class="row m-4">
                    <br><span class="row" asp-validation-for="Comment"></span><br>
                    <div class="col-6"><label asp-for="Comment"></label></div>
                </div>
                <div class="row m-1">
                    <div class="col-12"><textarea asp-for="Comment" cols="54" rows="3"></textarea></div>
                </div>
                <div style="float: right;"  class="row m-4">
                    <input value="Submit" type="submit">
                </div>
            </div>
        </div>
    </form>
</div>
