@model LoginUser
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="row">
                <div class="col-6 mt-4 text-center"><h1>Login</h1></div>
            </div>
            <form asp-action="Logged" asp-controller="Home" method="post">
                <div class="row">
                    <div class="col mt-4">
                        <div class="row">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="row">
                            <div class="col-3 mt-2 mb-2"><label asp-for="Email"></label></div> 
                            <div class="col-4 mt-2 mb-2"><input style="width: 200px;" asp-for="Email"></div>
                        </div>
                        <div class="row">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="row">
                            <div class="col-3 mt-2 mb-2"><label asp-for="Password"></label></div>
                            <div class="col-4 mt-2 mb-2"><input style="width: 200px;" asp-for="Password"></div>
                            <div class="col-3 mt-2 mb-2"><a href="/">Need to Register?</a></div>
                        </div>
                        <div  class="row">
                            <div class="col-3 mt-2 mb-2">
                                <input value="Submit" type="submit">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>