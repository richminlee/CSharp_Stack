@model Chef
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="row">
                <div class="col mt-4 text-center"><h1>Add a Chef!</h1></div>
            </div>
            <div class="row">
                <div class="col"><a href="/">Home</a></div>
            </div>

            <form asp-action="New" asp-controller="Home" method="post">
                <div class="row">
                    <div class="col mt-4">
                        <div class="row">
                            <div class="col-4">
                                <br><span class="row" asp-validation-for="FirstName"></span><br>
                                <div class="col"><label asp-for="FirstName"></label></div> 
                                <div class="col"><input style="width: 200px;" asp-for="FirstName"></div>
                                <br><span class="row" asp-validation-for="LastName"></span><br>
                                <div class="col"><label asp-for="LastName"></label></div> 
                                <div class="col"><input style="width: 200px;" asp-for="LastName"></div>
                            </div>
                            <div class="col-4">
                                <br><span class="row" asp-validation-for="Birthdate"></span><br>
                                <div class="col"><label asp-for="Birthdate"></label></div> 
                                <div class="col"><input style="width: 200px;" type="date" asp-for="Birthdate"></div>
                                <div  class="row m-4">
                                    <input value="Add Chef" type="submit">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>